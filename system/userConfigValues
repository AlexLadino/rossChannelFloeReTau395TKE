// averagingProperties
// Formula simple:
// tStartAveraging: endTime(transient) + 10*deltaT + 0.5*deltaT
// tStartTKEAveraging > tStartAveraging
// tStartTKEAveraging: endTime(lpt) + deltaT(lpt) + 10*deltaT + 0.5*deltaT
valTStartAveraging            2.1; // 
valTStartTKEAveraging         4.4; // 

